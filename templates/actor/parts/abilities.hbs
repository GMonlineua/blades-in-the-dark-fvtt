<div class="abilities items-block">
  <div class="item-header">
    <a class="item-create" title="{{localize 'BITD.ItemAdd'}}" data-type="abilityCharacter"><i class="fas fa-plus"></i>{{localize 'BITD.ItemAdd'}}</a>
    <h2>{{localize 'BITD.Ability.Special'}}</h2>
    <div class="value-step-block exp-block" data-value="{{system.exp}}" data-key="system.attributes.{{key}}.exp">
      {{#numLoop 6}}
        <span class="value-step value-tooth" data-index="{{this}}"></span>
      {{/numLoop}}
    </div>
  </div>
  <ol class="items-list">
    {{#each abilities as |item id|}}
      <li class="item {{item.type}}" data-item-id="{{item._id}}">
        <div class="item-description">
          <span class="item-name">{{item.name}}</span>
        </div>

        <div class="item-summary">
          {{{item.system.description}}}
        </div>

        <div class="item-controls">
          <a class="item-control rollable" data-roll-type="show" title="{{localize 'BITD.ItemShow'}}"><i class="fa fa-comment"></i></a>
          <a class="item-control item-edit" title="{{localize 'BITD.ItemEdit'}}"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete" title="{{localize 'BITD.ItemDelete'}}"><i class="fas fa-trash"></i></a>
        </div>
      </li>
    {{/each}}
  </ol>
</div>
