<li class="item {{item.type}} {{toolClass item.system}}" data-item-id="{{item._id}}">
  <div class="item-description">
    {{#if item.system.loadout}}
      <div class="item-checkbox item-loadout {{#if item.system.equipped}}active{{/if}}" data-key="equipped">
        {{#numLoop item.system.loadout}}
          <span class="loadout-box"></span>
        {{/numLoop}}
      </div>
    {{/if}}
    <span class="item-name" data-tooltip="{{item.system.description}}">{{item.name}}</span>
  </div>

  <div class="item-summary">
    {{{item.system.description}}}
  </div>

  <div class="item-controls">
    <a class="item-control item-show" title="{{localize 'BITD.Item.Show'}}"><i class="fa fa-comment"></i></a>
    <a class="item-control item-edit" title="{{localize 'BITD.Item.Edit'}}"><i class="fas fa-edit"></i></a>
    <a class="item-control item-delete" title="{{localize 'BITD.Item.Delete'}}"><i class="fas fa-trash"></i></a>
  </div>
</li>
