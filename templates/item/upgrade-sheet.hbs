<form class="{{cssClass}} {{item.type}}" autocomplete="off">
  <header class="items-header">
    <img class="item-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-fields">
      <h1 class="item-name"><input name="name" type="text" value="{{item.name}}" placeholder="{{localize 'BITD.ItemName'}}"/></h1>
      <div class="brief-info">
        <select class="prop clear-select" name="system.type">
          {{selectOptions config.upgradeType selected=system.type localize=true}}
        </select>
        <div class="prop">
          <label class="prop-label" for="system.active">{{localize 'BITD.Upgrade.IsActive'}}</label>
          <input class="prop-input" type="checkbox" name="system.active" {{checked system.active}}></input>
        </div>
        <div class="prop">
          <label class="prop-label" for="system.price">{{localize 'BITD.Upgrade.Price'}}:</label>
          <input class="prop-input clear-input" type="number" name="system.price"  value="{{system.price}}"></input>
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Body --}}
  <section class="sheet-body">
    <hr>
    {{editor enrichedDescription target="system.description" rollData=rollData button=true engine="prosemirror" editable=editable collaborate=true}}
  </section>

</form>
