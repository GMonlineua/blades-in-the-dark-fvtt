<form class="{{cssClass}} {{item.type}}" autocomplete="off">
  <header class="items-header">
    <img class="item-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-fields">
      <h1 class="item-name"><input name="name" type="text" value="{{item.name}}" placeholder="{{localize 'BITD.ItemName'}}"/></h1>
      <div class="brief-info">
        <select class="prop clear-select" name="system.type">
          {{#select system.type}}
            <option value="friend">{{localize 'BITD.Contact.Types.Friend'}}</option>
            <option value="rival">{{localize 'BITD.Contact.Types.Rival'}}</option>
            <option value="enemy">{{localize 'BITD.Contact.Types.Enemy'}}</option>
            <option value="vice purveyor">{{localize 'BITD.Contact.Types.VicePurveyor'}}</option>
            <option value="other">{{localize 'BITD.Contact.Types.Other'}}</option>
          {{/select}}
        </select>
        <div class="prop">
          <label class="prop-label" for="system.tags">{{localize 'BITD.Summary'}}:</label>
          <input class="tags clear-input" type="text" name="system.tags" value="{{system.tags}}" data-dtype="String" placeholder="{{localize 'BITD.Summary'}}"/>
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Body --}}
  <section class="sheet-body">
    <hr>
    {{editor enrichedDescription target="system.description" rollData=rollData button=true owner=owner editable=editable}}
  </section>

</form>
