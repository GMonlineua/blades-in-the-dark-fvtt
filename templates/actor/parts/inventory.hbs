<div class="spec-inventory items-block">
  <div class="item-header bitd-header">
    <h3>{{localize 'BITD.InventorySpecial'}}</h3>
    <a class="item-create" title="{{localize 'BITD.ItemAdd'}}" data-type="tool"><i class="fas fa-plus"></i></a>
  </div>
  <ol class="items-list">
    {{#each specInventory as |item id|}}
      <li class="item {{item.type}} {{toolClass item.system}}" data-item-id="{{item._id}}">
        <div class="item-description">
          {{#if item.system.loadout}}
            <div class="value-step-block" data-value="{{item.system.equipped}}" data-key="item.system.equipped">
              {{#numLoop item.system.loadout}}
                <span class="value-step value-box" data-index="{{this}}"></span>
              {{/numLoop}}
            </div>
          {{/if}}
          <span class="item-name">{{item.name}}</span>
        </div>

        <div class="item-summary">
          {{{item.system.description}}}
        </div>

        <div class="item-controls">
          <a class="item-control show-item" data-roll-type="show" title="{{localize 'BITD.ItemShow'}}"><i class="fa fa-comment"></i></a>
          <a class="item-control item-edit" title="{{localize 'BITD.ItemEdit'}}"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete" title="{{localize 'BITD.ItemDelete'}}"><i class="fas fa-trash"></i></a>
        </div>
      </li>
    {{/each}}
  </ol>
</div>

