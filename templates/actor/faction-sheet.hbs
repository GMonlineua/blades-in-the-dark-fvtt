<form class="{{cssClass}} {{actor.type}}" autocomplete="off">
  {{!-- Sheet Header --}}
  <header class="sheet-header actor-grid">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}"/>
    <div class="header-fields">
      <h1 class="character-name"><input name="name" type="text" value="{{actor.name}}" placeholder="{{localize 'BITD.ItemName'}}"/></h1>
      <div class="brief-info">
        <div class="prop">
          <label class="prop-label rollable" data-roll-type="fortune" for="system.tier.value">{{localize 'BITD.Tier'}}:</label>
          <input class="prop-input clear-input" type="number" name="system.tier.value" value="{{system.tier.value}}"></input>
          <select class="clear-select" name="system.hold">
            {{selectOptions config.holdTypes selected=system.hold localize=true}}
          </select>
        </div>
        <div class="prop">
          <label class="prop-label" for="system.status">{{localize 'BITD.Status.Title'}}:</label>
          <select class="clear-select" name="system.status">
            {{selectOptions config.statusTypes selected=system.status localize=true}}
          </select>
        </div>
        <input class="prop summary all-width" name="system.summary" type="text" value="{{system.summary}}" placeholder="{{localize 'BITD.Summary'}}" data-dtype="String"></input>
      </div>
    </div>

  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs flexrow" data-group="primary">
    <a class="item" data-tab="general">{{localize 'BITD.General'}}</a>
    <a class="item" data-tab="notes">{{localize 'BITD.Notes'}}</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Owned Playbook Tab --}}
    <div class="tab general" data-group="primary" data-tab="general">

      <div class="goals prop-field">
        <div class="show-for-limited" data-tooltip="{{localize 'BITD.ShowForPlayers.Tooltip'}}">
          <label for="system.goals.show">{{localize 'BITD.ShowForPlayers.Title'}}</label>
          <input class="show-checkbox" type="checkbox" name="system.goals.show" {{checked system.goals.show}}></input>
        </div>
        <label class="prop-lable" for="system.goals">{{localize 'BITD.Goals'}}:</label>
        <input class="all-width" name="system.goals.value" type="text" value="{{system.goals.value}}"></input>
      </div>

      <div class="lair prop-field">
        <div class="show-for-limited" data-tooltip="{{localize 'BITD.ShowForPlayers.Tooltip'}}">
          <label for="system.lair.show">{{localize 'BITD.ShowForPlayers.Title'}}</label>
          <input class="show-checkbox" type="checkbox" name="system.lair.show" {{checked system.lair.show}}></input>
        </div>
        <label class="prop-lable" for="system.lair">{{localize 'BITD.Lair'}}:</label>
        <input class="all-width" name="system.lair.value" type="text" value="{{system.lair.value}}"></input>
      </div>

      <div class="notable-assets prop-field">
        <div class="show-for-limited" data-tooltip="{{localize 'BITD.ShowForPlayers.Tooltip'}}">
          <label for="system.assets.show">{{localize 'BITD.ShowForPlayers.Title'}}</label>
          <input class="show-checkbox" type="checkbox" name="system.assets.show" {{checked system.assets.show}}></input>
        </div>
        <label class="prop-lable" for="system.assets">{{localize 'BITD.NotableAssets'}}:</label>
        <textarea name="system.assets.value">{{system.assets.value}}</textarea>
      </div>

      <div class="quirks prop-field">
        <div class="show-for-limited" data-tooltip="{{localize 'BITD.ShowForPlayers.Tooltip'}}">
          <label for="system.quirks.show">{{localize 'BITD.ShowForPlayers.Title'}}</label>
          <input class="show-checkbox" type="checkbox" name="system.quirks.show" {{checked system.quirks.show}}></input>
        </div>
        <label class="prop-lable" for="system.quirks">{{localize 'BITD.Quirks'}}:</label>
        <textarea name="system.quirks.value">{{system.quirks.value}}</textarea>
      </div>

      <div class="turf prop-field items-block full-size">
        <div class="show-for-limited" data-tooltip="{{localize 'BITD.ShowForPlayers.Tooltip'}}">
          <input class="show-checkbox" type="checkbox" name="system.turf.show" {{checked system.turf.show}}></input>
        </div>
        <div class="item-header bitd-header">
          <a class="item-create" title="{{localize 'BITD.Item.Add'}}" data-type="claim"><i class="fas fa-plus"></i></a>
          <h3>{{localize 'BITD.Turf'}}</h3>
        </div>
        <ol class="items-list">
          {{#each claims as |item id|}}
            <li class="item {{item.type}}" data-item-id="{{item._id}}">
              <div class="item-description">
                <span class="item-name">{{item.name}}</span>
              </div>

              <div class="item-summary">
                <p class="effect"><b>{{localize 'BITD.Claim.Effect'}}:</b> {{system.effect}}</p>
                {{{item.system.description}}}
              </div>

              <div class="item-controls">
                <a class="item-control item-show" title="{{localize 'BITD.Item.Show'}}"><i class="fa fa-comment"></i></a>
                <a class="item-control item-edit" title="{{localize 'BITD.Item.Edit'}}"><i class="fas fa-edit"></i></a>
                <a class="item-control item-delete" title="{{localize 'BITD.Item.Delete'}}"><i class="fas fa-trash"></i></a>
              </div>
            </li>
          {{/each}}
        </ol>
      </div>

      <div class="npcs prop-field">
        <div class="show-for-limited" data-tooltip="{{localize 'BITD.ShowForPlayers.Tooltip'}}">
          <input class="show-checkbox" type="checkbox" name="system.npc.show" {{checked system.npc.show}}></input>
        </div>
        <h3 class="bitd-header">{{localize 'BITD.NPCs'}}</h3>
        <div class="grid-2col">
          {{> "systems/bitd/templates/actor/parts/contacts.hbs"}}
          <div class="links">
            <div class="item-header bitd-header">
              <h3 class="contacts-title">{{localize 'BITD.Actor.Plural'}}</h3>
            </div>
          </div>
        </div>
      </div>

      <div class="related-faction prop-field grid-2col">
        <div class="show-for-limited" data-tooltip="{{localize 'BITD.ShowForPlayers.Tooltip'}}">
          <input class="show-checkbox" type="checkbox" name="system.relatedFactions.show" {{checked system.relatedFactions.show}}></input>
        </div>
        <div class="allies">
          <h3 class="bitd-header">{{localize 'BITD.Allies'}}</h3>
        <textarea name="system.relatedFactions.allies">{{system.relatedFactions.allies}}</textarea>
        </div>
        <div class="enemies">
          <h3 class="bitd-header">{{localize 'BITD.Enemies'}}</h3>
        <textarea name="system.relatedFactions.enemies">{{system.relatedFactions.enemies}}</textarea>
        </div>
      </div>

    </div>

    {{!-- Owned Notes Tab --}}
    <div class="tab notes" data-group="primary" data-tab="notes">
      <div class="situation">
        <h3 class="bitd-header">{{localize 'BITD.Situation'}}</h3>
        {{editor enrichedSituation target="system.situation" rollData=rollData button=true engine="prosemirror" editable=editable collaborate=true}}
      </div>
      <div class="description">
        <h3 class="bitd-header">{{localize 'BITD.Description'}}</h3>
        {{editor enrichedDescription target="system.description" rollData=rollData button=true engine="prosemirror" editable=editable collaborate=true}}
      </div>
    </div>

  </section>
</form>
