<form class="{{cssClass}} {{item.type}}" autocomplete="off">
  <header class="items-header">
    <img class="item-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-fields">
      <h1 class="item-name"><input name="name" type="text" value="{{item.name}}" placeholder="{{localize 'BITD.ItemName'}}"/></h1>
      <div class="brief-info">
        <div class="prop">
          <label class="prop-label" for="system.type">{{localize 'BITD.ContactType'}}:</label>
          <input class="prop-input clear-input" type="text" name="system.type" value="{{system.type}}" data-dtype="String" placeholder="{{localize 'BITD.ContactType'}}"/>
        </div>
        <div class="prop">
          <label class="prop-label" for="system.tags">{{localize 'BITD.Description'}}:</label>
          <input class="tags clear-input" type="text" name="system.tags" value="{{system.tags}}" data-dtype="String" placeholder="{{localize 'BITD.Description'}}"/>
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Body --}}
  <section class="sheet-body">
    <hr>
    {{editor enrichedDescription target="system.description" rollData=rollData button=true owner=owner editable=editable}}
  </section>

</form>
