<form class="{{cssClass}} {{item.type}}" autocomplete="off">
  <header class="items-header">
    <img class="item-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-fields">
      <h1 class="item-name"><input name="name" type="text" value="{{item.name}}" placeholder="{{localize 'BITD.Item.Name'}}"/></h1>
      <div class="brief-info">
        <div class="prop">
          <label class="prop-label" for="system.active">{{localize 'BITD.Ability.IsActive'}}</label>
          <input class="prop-input" type="checkbox" name="system.active" {{checked system.active}}></input>
        </div>
        <div class="prop uses">
          <label class="prop-label" for="system.uses">{{localize 'BITD.Uses'}}:</label>
          <input class="prop-input clear-input" type="number" name="system.uses.used" value="{{system.uses.used}}"></input>
          <span>/</span>
          <input class="prop-input clear-input" type="number" name="system.uses.max" value="{{system.uses.max}}"></input>
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Body --}}
  <section class="sheet-body">
    <hr>
    {{editor enrichedDescription target="system.description" rollData=rollData button=true engine="prosemirror" editable=editable collaborate=true}}
  </section>

</form>
